#!/bin/bash

# first line is request
read request

# ignore the header
while /bin/true; do
    read header
    [ "$header" == $'\r' ] && break
done

echo "HTTP/1.1 200 OK"
echo "Cache-Control: no-cache"
echo "Content-type: text/html"
echo -e "\n"
echo '<html>'
echo '<head>'
echo '<title>Starting App...</title>'
echo '<script type="text/javascript">window.setTimeout(function () { location.reload(); }, 5000)</script>'
echo '</head>'
echo '<body>Starting App...</body>'
echo '</html>'

supervisorctl stop inetd
supervisorctl start app

exit 0